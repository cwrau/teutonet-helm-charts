{
  "extends": [
    "config:base"
  ],
  "assigneesFromCodeOwners": true,
  "assigneesSampleSize": 1,
  "platformAutomerge": true,
  "packageRules": [
    {
      "matchUpdateTypes": [
        "minor",
        "patch"
      ],
      "automerge": true
    }
  ],
  "separateMinorPatch": true,
  "regexManagers": [
    {
      "fileMatch": [
        ".yaml$"
      ],
      "matchStrings": [
        "spec:\\s+chart:\\s+spec:\\s+chart: (?<depName>\\S+)\\s+version: (?<currentValue>\\S+)\\s"
      ],
      "versioningTemplate": "helm",
      "datasourceTemplate": "helm"
    }
  ]
}
